@model DesafioAPI.Models.Tarefa

@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<h2>Detalhes da Tarefa</h2>

<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Data.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
    <div>
        <div class="text-center" style="margin-top: 30px;"></div>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    </div>
</div>